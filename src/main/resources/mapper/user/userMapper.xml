<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="base.work.user.UserDAO">
  <select id="findById" parameterType="long" resultType="base.work.user.UserDTO">
    SELECT id, username AS user_id, email, username AS user_nm
    FROM user
    WHERE id = #{id}
  </select>
</mapper>
